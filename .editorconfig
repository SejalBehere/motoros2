# https://editorconfig.org
# https://learn.microsoft.com/en-us/visualstudio/ide/create-portable-custom-editor-options

root = true

[*]
insert_final_newline = true

[*.{c,h}]
indent_size = 4
indent_style = space

[config/*.yaml]
end_of_line = crlf
indent_size = 2
indent_style = space

[tools/*.py]
indent_size = 4
indent_style = space

[*.{DAT,JBI}]
# force Windows EOLs, to prevent controller errors
end_of_line = crlf
